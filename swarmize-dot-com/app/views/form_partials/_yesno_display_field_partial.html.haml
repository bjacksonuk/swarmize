.form_group{:id => "group_#{field.field_code}"}
  %label= field.field_name
  .radio
    %label
      = radio_button_tag field.field_code, 'yes', false, parsley_validations_for_field(field)
      Yes
  .radio
    %label
      = radio_button_tag field.field_code, 'no', false, parsley_validations_for_field(field)
      No 
  .parsley-errors{:id => "errors_#{field.field_code}"}
