.form-element.rating
  .header
    %h2 Rating
    = render :partial => "form_partials/element_controls"

  .form-group
    %label.col-sm-3.control-label Field name
    .col-sm-9
      = text_field_tag "fields[][field_name]", field.field_name, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Minimum value
    .col-sm-9
      = text_field_tag "fields[][minimum_value]", field.minimum_value, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Maximum value
    .col-sm-9
      = text_field_tag "fields[][maximum_value]", field.maximum_value, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Compulsory?
    .col-sm-9
      = check_box_tag "fields[][compulsory]", field.compulsory, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Index
    .col-sm-9
      = text_field_tag "fields[][index]", field['index'], :class => 'form-control', :id => "index"

  .form-group
    %label.col-sm-3.control-label Field type
    .col-sm-9
      = text_field_tag "fields[][field_type]", 'rating', :class => 'form-control'
