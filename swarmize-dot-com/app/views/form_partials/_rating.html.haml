.form-element.rating
  .header
    %h2 Rating
    = render :partial => "form_partials/element_controls"

  .form-group
    %label.col-sm-3.control-label Field name
    .col-sm-9
      = text_field_tag :field_name, nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Minimum value
    .col-sm-9
      = text_field_tag :minimum_value, nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Maximum value
    .col-sm-9
      = text_field_tag :maximum_value, nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Compulsory?
    .col-sm-9
      = check_box_tag :compulsory, nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Index
    .col-sm-9
      = text_field_tag :index, nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Field type
    .col-sm-9
      = text_field_tag :field_type, 'rating', :class => 'form-control'
