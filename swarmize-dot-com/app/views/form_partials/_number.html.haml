.form-element.number
  .header
    %h2 Number
    = render :partial => "form_partials/element_controls"

  .form-group
    %label.col-sm-3.control-label Field name
    .col-sm-9
      = text_field_tag "fields[][field_name]", nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Sample value
    .col-sm-9
      = number_field_tag "fields[][sample_value]", nil, :class => 'form-control'

  .form-group
    %label.col-sm-3.control-label Compulsory?
    .col-sm-9
      = check_box_tag "fields[][compulsory]", nil, :class => 'form-control'
  
  .form-group
    %label.col-sm-3.control-label Index
    .col-sm-9
      = text_field_tag "fields[][index]", nil, :class => 'form-control', :id => 'index'

  .form-group
    %label.col-sm-3.control-label Field type
    .col-sm-9
      = text_field_tag "fields[][field_type]", 'number', :class => 'form-control'
