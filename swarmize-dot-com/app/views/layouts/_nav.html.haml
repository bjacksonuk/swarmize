%nav.navbar.navbar-default.navbar-inverse{role: 'navigation'}
  .container
    <!-- Brand and toggle get grouped for better mobile display -->
    .navbar-header
      %button.navbar-toggle{:type => 'button', "data-toggle" => 'collapse', 'data-target' => '#navbar-collapse'}
        %span.sr-only Toggle navigation
        %span.icon-bar 
        %span.icon-bar 
        %span.icon-bar 
      = link_to "Swarmize", "/", class: 'navbar-brand'

    <!-- Collect the nav links, forms, and other content for toggling -->
    #navbar-collapse.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{:href => "#", "data-toggle" => 'dropdown'}
            Swarms
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            %li= link_to "All Swarms", swarms_path
            - if @current_user
              %li= link_to "My Swarms", "#"
              %li= link_to "New Swarm", new_swarm_path
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %p.navbar-text 
              Logged in as 
              = link_to @current_user.name, "/users/#{@current_user.id}", :class => "navbar-link"
              = image_tag @current_user.image_url
          %li= link_to "Log out", logout_session_path
        - else
          %li= link_to "Log in", login_path

      %form.navbar-form.navbar-right{role: 'search', action: results_search_path}
        .form-group
          %input.form-control{placeholder: 'Search', name: 'query'}
        %button.btn.btn-default{type: 'Submit'} Search

