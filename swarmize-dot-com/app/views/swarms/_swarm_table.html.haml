%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th Created by
      %th Opens At
      %th Closes At
      %th Actions

  %tbody
    - if swarms && swarms.any?
      - for swarm in swarms
        %tr
          %td= link_to swarm.name, swarm
          %td= swarm.description
          %td= link_to swarm.creator.name, user_path(swarm.creator) if swarm.creator
          %td= swarm.opens_at
          %td= swarm.closes_at
          %td
            - if swarm.creator == @current_user
              = link_to "Delete", delete_swarm_path(swarm)
              |
            = link_to "JSON", swarm_path(swarm, :format => 'json')

