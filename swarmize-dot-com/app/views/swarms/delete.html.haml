- content_for :pagetitle do
  Delete Swarm '#{@swarm.name}'? : Swarms : 

.page-header.swarmize-header
  %h1 
    Delete swarm '#{@swarm.name}'?
  %p
    %a{:href => swarm_path(@swarm)}
      = glyphicon('circle-arrow-left')
      Back to swarm

%p Are you sure you want to delete this swarm?

%p
  = button_to "Delete", swarm_path(@swarm), :method => :delete, :class => "btn btn-default"
  or
  = link_to "Return to all swarms", swarms_path
