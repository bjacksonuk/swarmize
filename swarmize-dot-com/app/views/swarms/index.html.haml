%h1 All Swarms

%p This page lists all swarms

%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th Actions
  %tbody
    - for swarm in @swarms
      %tr
        %td= swarm.name
        %td= swarm.description
        %td
          = link_to "View", swarm
          |
          = link_to "Fields", fields_swarm_path(swarm)
          |
          = link_to "Preview", preview_swarm_path(swarm)
          |
          = link_to "Delete", delete_swarm_path(swarm)

%p= link_to "New swarm", new_swarm_path
